     ]
    },
    "x-wso2-production-endpoints": {
     "urls": [
      "http://backend-service/maintenance/v1"
     ],
     "type": "http"
    },
    "x-wso2-sandbox-endpoints": {
     "urls": [
      "http://backend-service/maintenance/v1"
     ],
     "type": "http"
    },
    "x-wso2-basePath": "/maintenance/1.0.0",
    "x-wso2-transports": [
     "http",
     "https"
    ],
    "x-wso2-application-security": {
     "security-types": [
      "oauth2"
     ],
     "optional": false
    },
    "x-wso2-response-cache": {
     "enabled": false,
     "cacheTimeoutInSeconds": 300
    }
   }